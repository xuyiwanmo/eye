<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".settings.myOnlineManager.activity.SetTextConsultActivity">

    <com.sg.eyedoctor.common.view.MyActionbar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:actionbar_title="@string/add_consult"
        app:rightBtn_visible="false"/>

    <com.sg.eyedoctor.common.view.DescribeView
        android:id="@+id/open_dv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:describe="@string/add_consult_desc"
        app:show_open="true"
        app:title_name="是否开通加号咨询"/>

    <ScrollView
        android:id="@+id/price_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="18dp">

                <LinearLayout
                    android:id="@+id/price_ll"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/bg_edit_trans"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="@string/once_price"
                        android:textSize="@dimen/text_18"/>

                    <EditText
                        android:id="@+id/price_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/trans"
                        android:padding="10dp"
                        android:text="0.01"
                        android:textColor="@color/actionbar_color"
                        android:textSize="@dimen/text_18"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="@string/yuan"
                        android:textSize="@dimen/text_18"/>


                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/title_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/price_ll"
                    android:layout_below="@id/price_ll"
                    android:background="@color/line">

                    <TextView
                        android:id="@+id/tv0"
                        style="@style/table_text_title"
                        android:layout_height="32dp"/>

                    <TextView
                        android:id="@+id/tv1"
                        style="@style/table_text"
                        android:layout_height="32dp"
                        android:layout_toRightOf="@id/tv0"
                        android:background="@color/gray_bg"
                        android:text="@string/morning"
                        android:textColor="@color/text_body_strong"/>

                    <TextView
                        android:id="@+id/tv2"
                        style="@style/table_text"
                        android:layout_height="32dp"
                        android:layout_marginRight="0.5dp"
                        android:layout_toRightOf="@id/tv1"
                        android:background="@color/gray_bg"
                        android:text="@string/afternoon"
                        android:textColor="@color/text_body_strong"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/title1_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/title_rl"
                    android:layout_below="@id/title_rl"
                    android:background="@color/line">

                    <TextView
                        android:id="@+id/tv3"
                        style="@style/table_text_title"
                        android:text="@string/monday"
                        android:textColor="@color/text_body_strong"/>

                    <TextView
                        android:id="@+id/tv6"
                        style="@style/table_text_title"
                        android:layout_below="@id/tv3"
                        android:text="@string/tuesday"
                        android:textColor="@color/text_body_strong"/>

                    <TextView
                        android:id="@+id/tv9"
                        style="@style/table_text_title"
                        android:layout_below="@id/tv6"
                        android:text="@string/wednesday"
                        android:textColor="@color/text_body_strong"/>

                    <TextView
                        android:id="@+id/tv12"
                        style="@style/table_text_title"
                        android:layout_below="@id/tv9"
                        android:text="@string/thursday"
                        android:textColor="@color/text_body_strong"/>

                    <TextView
                        android:id="@+id/tv15"
                        style="@style/table_text_title"
                        android:layout_below="@id/tv12"
                        android:text="@string/friday"
                        android:textColor="@color/text_body_strong"/>

                    <TextView
                        android:id="@+id/tv18"
                        style="@style/table_text_title"
                        android:layout_below="@id/tv15"
                        android:text="@string/saturday"
                        android:textColor="@color/text_body_strong"/>

                    <TextView
                        android:id="@+id/tv21"
                        style="@style/table_text_title"
                        android:layout_below="@id/tv18"
                        android:layout_marginBottom="0.5dp"
                        android:text="@string/sunday"
                        android:textColor="@color/text_body_strong"/>

                </RelativeLayout>

                <RelativeLayout

                    android:id="@+id/set_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_rl"
                    android:layout_gravity="center_horizontal"
                    android:layout_toRightOf="@id/title1_rl"
                    android:background="@color/line"
                    android:paddingRight="0.5dp">


                    <TextView
                        android:id="@+id/tv4"
                        style="@style/table_text"/>

                    <TextView
                        android:id="@+id/tv5"
                        style="@style/table_text"
                        android:layout_toRightOf="@id/tv4"/>


                    <TextView
                        android:id="@+id/tv7"
                        style="@style/table_text"
                        android:layout_below="@id/tv4"
                        />

                    <TextView
                        android:id="@+id/tv8"
                        style="@style/table_text"
                        android:layout_below="@id/tv4"
                        android:layout_toRightOf="@id/tv7"/>


                    <TextView
                        android:id="@+id/tv10"
                        style="@style/table_text"
                        android:layout_below="@id/tv7"
                        />

                    <TextView
                        android:id="@+id/tv11"
                        style="@style/table_text"
                        android:layout_below="@id/tv7"
                        android:layout_toRightOf="@id/tv10"/>


                    <TextView
                        android:id="@+id/tv13"
                        style="@style/table_text"
                        android:layout_below="@id/tv10"
                        />

                    <TextView
                        android:id="@+id/tv14"
                        style="@style/table_text"
                        android:layout_below="@id/tv10"
                        android:layout_toRightOf="@id/tv13"/>


                    <TextView
                        android:id="@+id/tv16"
                        style="@style/table_text"
                        android:layout_below="@id/tv13"
                        />

                    <TextView
                        android:id="@+id/tv17"
                        style="@style/table_text"
                        android:layout_below="@id/tv13"
                        android:layout_toRightOf="@id/tv16"/>


                    <TextView
                        android:id="@+id/tv19"
                        style="@style/table_text"
                        android:layout_below="@id/tv16"
                        />

                    <TextView
                        android:id="@+id/tv20"
                        style="@style/table_text"
                        android:layout_below="@id/tv16"
                        android:layout_toRightOf="@id/tv19"/>


                    <TextView
                        android:id="@+id/tv22"
                        style="@style/table_text"
                        android:layout_below="@id/tv19"
                        android:layout_marginBottom="0.5dp"
                        />

                    <TextView
                        android:id="@+id/tv23"
                        style="@style/table_text"
                        android:layout_below="@id/tv19"
                        android:layout_marginBottom="0.5dp"
                        android:layout_toRightOf="@id/tv22"/>

                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
