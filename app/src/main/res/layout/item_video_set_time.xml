<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_height="match_parent"
                android:background="@color/white"
    >

    <TextView
        android:id="@+id/actionbar_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:padding="10dp"
        android:text="时间段"
        android:textColor="@color/text_body_strong"/>

    <ImageView
        android:id="@+id/delete_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_decrease"/>

    <View
        android:id="@+id/line"
        style="@style/style_line"
        android:layout_below="@id/delete_img"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>


    <TextView
        android:gravity="center"
        android:id="@+id/ill_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/line"
        android:layout_marginLeft="10dp"
        android:text="就诊时段"
        android:textColor="@color/text_body_strong"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/ill_time_tv"
        android:id="@+id/start_time_tv"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:layout_below="@id/line"
        android:layout_marginLeft="12dp"
        android:background="@drawable/bg_gray_border_gray"
        android:gravity="center"
        android:text="14:15"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/horizontal_line_tv"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_below="@id/line"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/start_time_tv"
        android:gravity="center"
        android:text="-"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/end_time_tv"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:layout_below="@id/line"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/horizontal_line_tv"
        android:background="@drawable/bg_gray_border_gray"
        android:gravity="center"
        android:text="14:15"/>


    <TextView
        android:gravity="center"
        android:id="@+id/ill_count_tv"

        android:layout_below="@+id/ill_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:text="就诊数量"
        android:textColor="@color/text_body_strong"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/start_time_tv"
        android:layout_toRightOf="@+id/ill_count_tv"
        android:id="@+id/count_tv"
        android:layout_alignLeft="@id/start_time_tv"
        android:layout_alignRight="@id/end_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/bg_gray_border_gray"
        android:gravity="center"
        tools:text="4"/>


    <View

        style="@style/style_line"
        android:layout_below="@id/ill_count_tv"
        />


</RelativeLayout>