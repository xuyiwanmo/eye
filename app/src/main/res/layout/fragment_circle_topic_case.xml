<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/publish_ll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <com.sg.eyedoctor.common.view.RoundImageView
            android:id="@+id/head_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/doctor_head"/>

        <TextView
            android:id="@+id/publish_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/share_case"
            android:textColor="@color/text_body_weak"
            android:textSize="@dimen/text_14"/>
    </LinearLayout>

    <com.pulltorefresh.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/case_lv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@color/gray_bg"
        android:dividerHeight="8dp"
        android:focusable="false"/>


</LinearLayout>

