<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/text_body_weak"
        android:textSize="@dimen/text_14"
        tools:text="义诊日期: 2016-03-12"/>

    <TextView
        android:id="@+id/actionbar_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_tv"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/text_body_strong"
        android:textSize="@dimen/text_16"
        tools:text="图文咨询"/>

    <TextView
        android:id="@+id/once_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="个"
        android:textColor="@color/text_body_strong"
        android:textSize="@dimen/text_14"/>

    <TextView
        android:id="@+id/count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/once_tv"
        android:textColor="@color/actionsheet_red"
        android:textSize="@dimen/text_18"
        tools:text="7"/>

    <View
        style="@style/style_line"
        android:layout_below="@+id/actionbar_title_tv"/>


</RelativeLayout>