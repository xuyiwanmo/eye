<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".doctorAsist.DoctorAssistActivity">

    <com.sg.eyedoctor.common.view.MyActionbar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:actionbar_title="@string/doctor_assist"
        app:rightBtn_visible="false"/>

    <LinearLayout
        android:id="@+id/hotline_ll"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/doctor_hot_line"
            android:textColor="@color/text_body_strong"
            android:textSize="@dimen/text_16"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="20dp"
            android:text="0592-12548622"
            android:textColor="@color/actionbar_color"
            android:textSize="@dimen/text_14"/>


    </LinearLayout>

    <View
        style="@style/style_line"
        />

    <TextView

        android:id="@+id/callback_tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="@string/doctor_callback"
        android:textColor="@color/actionbar_color"
        android:textSize="@dimen/text_16"/>

    <View
        style="@style/style_line"
        />


</LinearLayout>