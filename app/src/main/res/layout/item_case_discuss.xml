<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    android:background="@color/white">

    <com.sg.eyedoctor.common.view.RoundImageView
        android:id="@+id/head_img"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/doctor_head"/>

    <TextView
        android:singleLine="true"
        android:maxWidth="60dp"
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/head_img"
        android:text="黄先生"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16"/>

    <TextView
        android:id="@+id/actionbar_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/name_tv"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/name_tv"
        android:text="男"
        android:textColor="@color/black"
        android:textSize="@dimen/text_12"/>

    <TextView
        android:id="@+id/age_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/name_tv"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/actionbar_title_tv"
        android:text="40岁"
        android:textColor="@color/black"
        android:textSize="@dimen/text_12"/>


    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/arraw_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:src="@drawable/ic_arraw_gray"/>

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/name_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/arraw_img"
        android:text="18:25:30"
        android:textColor="@color/black"
        android:textSize="@dimen/text_12"/>

    <TextView
        android:singleLine="true"
        android:id="@+id/illness_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name_tv"
        android:layout_below="@id/name_tv"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/arraw_img"
        android:lineSpacingExtra="4dp"
        android:text="症状描述:症状描述症状描述症状描述症状描述症状症状描述症状描述"/>

    <View
        android:layout_marginTop="10dp"
        android:layout_below="@id/illness_tv"
        android:layout_height="1dp"
        style="@style/style_bottom_line"/>


</RelativeLayout>