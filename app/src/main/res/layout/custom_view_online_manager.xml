<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools"
                android:background="@color/white"
             >

    <ImageView
        android:layout_marginTop="14dp"
        android:layout_marginLeft="14dp"
        android:id="@+id/img"
        android:layout_centerVertical="true"
        android:src="@drawable/home_text_consult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="14dp"
        android:id="@+id/actionbar_title_tv"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="图文咨询"
        android:textColor="@color/text_body_strong"
        android:textSize="@dimen/text_16"
       />

    <TextView
        android:textColor="@color/actionsheet_red"
        android:layout_alignLeft="@id/actionbar_title_tv"
        android:layout_below="@id/actionbar_title_tv"
        tools:text="￥10元/次"
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/service_tv"
        android:layout_alignLeft="@id/actionbar_title_tv"
        android:layout_below="@id/price_tv"
        tools:text="为患者提供服务"
        android:textSize="@dimen/text_13"
        android:textColor="@color/text_body_weak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arraw_gray"/>

    <View
        android:layout_marginTop="12dp"
        android:layout_below="@id/service_tv"
        style="@style/style_line"
       />


</RelativeLayout>