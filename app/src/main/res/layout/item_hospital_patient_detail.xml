<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/begin_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:paddingLeft="10dp"
        android:text="开始时间"
        android:textSize="@dimen/text_14"/>

    <TextView
        android:id="@+id/begin_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/begin_name_tv"
        android:textColor="@color/text_body_strong"
        tools:text="03-08 8:00"/>

    <TextView
        android:id="@+id/advice_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/begin_tv"
        android:layout_marginTop="7dp"
        android:paddingLeft="10dp"
        android:text="医嘱"/>

    <TextView
        android:id="@+id/advice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/begin_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/advice_name_tv"
        android:textColor="@color/text_body_strong"
        tools:text="盐酸"/>

    <TextView
        android:id="@+id/type_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/advice_name_tv"
        android:layout_marginTop="7dp"
        android:paddingLeft="10dp"
        android:text="类型"/>

    <TextView
        android:id="@+id/type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/advice_name_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/type_name_tv"
        android:textColor="@color/text_body_strong"
        tools:text="长期"/>


    <TextView
        android:id="@+id/sort_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:text="新增"
        android:textColor="@color/green"
        android:textSize="@dimen/text_16"/>

    <TextView
        android:id="@+id/edit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/sort_tv"
        android:background="@drawable/bg_blue_text_white"
        android:padding="4dp"
        android:text="删除"
        android:textColor="@color/white"/>

    <View
        style="@style/style_line"
        android:layout_below="@id/type_tv"
        android:layout_marginTop="4dp"/>

</RelativeLayout>

