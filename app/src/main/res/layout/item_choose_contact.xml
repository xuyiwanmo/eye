<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/check_rl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <ImageView
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/check_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerVertical="true"
        android:src="@drawable/selector_sex"/>

    <com.sg.eyedoctor.common.view.RoundImageView
        android:layout_toRightOf="@id/check_img"
        android:id="@+id/head_img"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/ic_patient_head"
        android:layout_width="38dp"
        android:layout_height="38dp"/>

    <TextView
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/head_img"
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="姓名"
        android:textColor="@color/text_body_strong"
        android:textSize="@dimen/text_14"/>

    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_below="@+id/head_img"
        android:layout_height="0.5dp"/>


</RelativeLayout>

