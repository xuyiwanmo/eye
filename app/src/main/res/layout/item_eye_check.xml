<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">

    <com.sg.eyedoctor.common.view.RoundImageView
        android:id="@+id/check_img"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="14dp"
        app:border_outside_color="@color/actionbar_color"
        app:border_thickness="1dp"
        />

    <TextView
        android:id="@+id/actionbar_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/check_img"
        android:layout_toRightOf="@id/check_img"
        android:text="@string/eye_check"
        android:textColor="@color/black"
        android:textSize="@dimen/text_18"/>

    <ImageView
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arraw_gray"
        android:layout_alignParentRight="true"
        android:id="@+id/arraw_img"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:paddingBottom="10dp"
        android:layout_toLeftOf="@id/arraw_img"
        android:layout_marginTop="9dp"
        android:lineSpacingExtra="6dp"
        android:layout_below="@id/actionbar_title_tv"
        android:id="@+id/desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/check_img"
        android:maxLines="4"
        android:text="如果看到数字8,色觉是正常的,的色觉是正常的色觉是正常的色觉是正常的"
        android:textColor="@color/text_body_weak"
        android:textSize="@dimen/text_12"/>

    <View
       style="@style/style_bottom_line"></View>

</RelativeLayout>