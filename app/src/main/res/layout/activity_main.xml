<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_fragment"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"/>

    <View
        style="@style/style_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:id="@+id/ll_bottom_home"
            style="@style/style_bottom_ll">

            <ImageView
                style="@style/style_bottom_img"
                android:src="@drawable/bg_bottom_home"/>

            <TextView
                style="@style/style_bottom_text"
                android:text="@string/home"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_chart_file"
            style="@style/style_bottom_ll">

            <ImageView
                style="@style/style_bottom_img"
                android:src="@drawable/bg_bottom_crm"/>

            <TextView
                style="@style/style_bottom_text"
                android:text="@string/chartfile"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_circle"
            style="@style/style_bottom_ll">

            <ImageView
                style="@style/style_bottom_img"
                android:src="@drawable/bg_bottom_team"/>

            <TextView
                style="@style/style_bottom_text"
                android:text="@string/team"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_my"
            style="@style/style_bottom_ll">

            <ImageView
                style="@style/style_bottom_img"
                android:src="@drawable/bg_bottom_my"/>

            <TextView
                style="@style/style_bottom_text"
                android:text="@string/my"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
