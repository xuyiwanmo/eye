<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
    >

    <com.sg.eyedoctor.common.view.MyActionbar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:actionbar_title="站内消息"
        app:rightBtn_visible="false"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/message_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:textColor="@color/text_body_strong"
            android:textSize="@dimen/text_18"
            tools:text="医生端注册成功"/>


        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/message_title_tv"
            android:layout_marginTop="10dp"
            android:paddingLeft="12dp"
            android:text="16/02/20 15:20"
            android:textColor="@color/text_body_weak"
            android:textSize="@dimen/text_12"/>

        <TextView
            android:id="@+id/from_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time_tv"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:text="来自: 系统消息"
            android:textColor="@color/text_body_weak"
            android:textSize="@dimen/text_12"/>

        <TextView
            android:id="@+id/content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/from_tv"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="5dp"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:textColor="@color/text_body_strong"
            android:textSize="@dimen/text_16"
            tools:text="尊敬的医生您好,您已经完成注册,可以使用客户端尊敬的医生您好尊敬的医生您好"/>


    </RelativeLayout>
</LinearLayout>