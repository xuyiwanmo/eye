<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/news_img"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:scaleType="fitXY"
        android:src="@drawable/ad1"/>

    <TextView
        android:id="@+id/actionbar_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/news_img"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/news_img"
        android:lineSpacingExtra="8dp"
        android:text="[头条]热烈庆祝厦门华夏眼科集团"
        android:textSize="@dimen/text_16"/>

    <ImageView
        android:visibility="invisible"
        android:id="@+id/message_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/news_img"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@id/news_img"
        android:src="@drawable/ic_team_message"/>

    <TextView
        android:visibility="invisible"
        android:id="@+id/count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/message_img"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@id/message_img"
        android:text="2015"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_12"/>

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/message_img"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="2015-04-18"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_12"/>

</RelativeLayout>