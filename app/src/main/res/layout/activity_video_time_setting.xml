<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.sg.eyedoctor.settings.myOnlineManager.activity.VideoTimeSettingActivity">

    <com.sg.eyedoctor.common.view.MyActionbar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:actionbar_title="@string/add"
        app:rightBtn_visible="false"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">


            <com.sg.eyedoctor.common.view.NoScrollListView
                android:id="@+id/video_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/trans"/>

            <LinearLayout
                android:layout_marginTop="18dp"
                android:id="@+id/add_ll"
                android:gravity="center"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_white_border_blue"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/ic_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/actionbar_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_16"
                    android:text="@string/add_time"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
